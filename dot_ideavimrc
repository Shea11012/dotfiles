let mapleader=" "

""" Plugins --------------------------
""" https://github.com/JetBrains/ideavim/blob/master/doc/ideajoin-examples.md
set ideajoin
set ideastatusicon=gray
set idearefactormode=keep

""" 修改包裹符号 https://github.com/tpope/vim-surround/blob/master/doc/surround.txt
set surround

""" Common Settings -------------------
set encoding="utf-8"
set showmode
set incsearch
set number
set scrolloff=5
set relativenumber
set listchars = "tab:»·,nbsp:+,trail:·,extends:→,precedes:←"
set messages

" 中英文切换
let keep_input_source_in_insert=2052
let keep_input_source_in_normal=1033
set keep-english-in-normal-and-restore-in-insert

" 关闭文件
nmap <leader>q :q<CR>

" 重命名
nmap <leader>rn <Action>(RenameElement)

" 格式化
nmap <leader>fm <Action>(ReformatCode)

" 文件查找
nmap <leader>ff <Action>(GotoFile)

" 全局搜索
nmap <leader>fg <Action>(FindInPath)

" 全局替换
nmap <leader>fr <Action>(ReplaceInPath)

" 跳转到定义或引用处
nmap gd <Action>(GotoDeclaration)
" 跳转到类型定义
nmap gt <Action>(GotoTypeDeclaration)
" 跳转到实现
nmap gi <Action>(GotoImplementation)
" 查找被实现的类或方法
nmap gs <Action>(GotoSuperMethod)
" 当前文件所有函数
nmap gf <Action>(FileStructurePopup)

" 注释
nmap gcc <Action>(CommentByLineComment)
xmap gc <Action>(CommentByLineComment)<Esc>

" 打开终端
nmap `` <Action>(ActivateTerminalToolWindow)

" 跳转到上一个操作
nmap [d <Action>(Forward)
nmap ]d <Action>(Back)

" 函数跳转
nmap [f <Action>(MethodUp)
nmap ]f <Action>(MethodDown)


